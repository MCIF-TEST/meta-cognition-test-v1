        { "id": "perceptual_detail", "name": "Detail", "maxPoints": 50 },
        { "id": "sensory_emotion_link", "name": "Sensory-Emotion Link", "maxPoints": 25 },
        { "id": "concept_depth", "name": "Concept Depth", "maxPoints": 25 }
