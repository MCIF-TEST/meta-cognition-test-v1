      "promptIds": ["p_philosophy_001"],
      "metrics": [
        { "id": "depth", "name": "Depth", "maxPoints": 40 },
        { "id": "logical_consistency", "name": "Logical Consistency", "maxPoints": 30 },
        { "id": "existential_clarity", "name": "Existential Clarity", "maxPoints": 30 }
