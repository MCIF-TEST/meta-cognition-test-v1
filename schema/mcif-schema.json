      "promptIds": ["p_meta_001"],
      "metrics": [
        { "id": "meta_awareness", "name": "Meta-Awareness", "maxPoints": 40 },
        { "id": "process_diagnosis", "name": "Process Diagnosis", "maxPoints": 40 },
        { "id": "remedy_clarity", "name": "Remedy Clarity", "maxPoints": 20 }
