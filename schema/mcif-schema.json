  "scoring": {
    "compositeFormula": "weighted_sum_normalized",
    "metricNormalization": "perMetricMax -> normalize to 0..1",
    "tierBoundaries": {
      "Explorer": 0.5,
      "Architect": 0.75,
      "Visionary": 0.94
    },
    "tierReportLabels": {
      "Explorer": "Explorer (Introductory session)",
      "Architect": "Architect (Intermediate depth)",
      "Visionary": "Visionary (Advanced synthesis)"
    },
    "outlierDetectionRules": {
      "varianceStddevCap": 0.25,
      "maxChangePerSession": 0.15
    },
    "adaptationRules": {
      "weightAdjustmentOnDrift": {
        "enabled": false,
        "method": "conservative_delta",
        "deltaCap": 0.02
      },
      "promptDifficultyShift": {
        "enabled": true,
        "onLowPerformance": "insert_remedial_prompt",
        "onHighPerformance": "insert_challenge_prompt"
      }
    },
    "auditTrace": true,
    "computationNotes": "Each answer produces raw scores per mapped metric via scoring engine (keyword-match, length heuristics, coherence heuristics). Weighted contributions sum into metric raw totals. Metrics normalized then combined by defaultWeight to produce composite."
  },

  "branching": {
    "nodes": [
      {
        "id": "b_p1_q1_low",
        "condition": { "op": "<", "left": { "source": "lastAnswer.raw" }, "right": 0.35 },
        "action": { "type": "gotoPrompt", "target": "p1_q1_remedial_surface" }
      },
      {
        "id": "b_generic_high",
        "condition": { "op": ">", "left": { "source": "lastAnswer.raw" }, "right": 0.75 },
        "action": { "type": "gotoPrompt", "target": "insert_challenge_prompt" }
      }
    ],
    "expressionLanguage": "jsonlogic-like"
  },

